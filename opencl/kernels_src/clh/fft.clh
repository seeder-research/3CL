	v2 = fft_diff(in2, in6);\
	v3.x = v1.y;\
	v3.y = v2.x;\
	v1 = fft_sum(in2, in6);\
	v2 = fft_diff(in0, in4);\
	in0 = fft_sum(v0, v1);\
	in4 = fft_diff(v0, v1);\
	in2 = fft_sum(v2, v3);\
	in6 = fft_diff(v2, v3);\
	v0 = fft_sum(in1, in5);\
	v1 = fft_diff(in7, in3);\
	v2 = fft_diff(in3, in7);\
	v3.x = v1.y;\
	v3.y = v2.x;\
	v1 = fft_sum(in3, in7);\
	v2 = fft_diff(in1, in5);\
	in1 = fft_sum(v0, v1);\
	in5 = fft_diff(v0, v1);\
	in3 = fft_sum(v2, v3);\
	in7 = fft_diff(v2, v3);\
	v0 = in0;\
