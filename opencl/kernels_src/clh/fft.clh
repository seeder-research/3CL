#define twiddle_factor(k, angle, in) {\
	float2 tw, v;\
	tw.x = native_cos((float)k*angle);\
	tw.y = native_sin((float)k*angle);\
	v.x = tw.x * in.x;\
	v.x -= tw.y * in.y;\
	v.y = tw.x * in.y;\
	v.y += tw.y * in.x;\
	in = v;\
}

#define FFT2(in0, in1) {\
	float2 v0;\
	v0 = in0;\
	in0 = fft_sum(v0, in1);\
	in1 = fft_diff(v0, in1);\
}

#define FFT3(in0, in1, in2) {\
	float2 v0, v1, v2, v3;\
	v0 = in0;\
	v1 = fft_sum(in1, in2);\
	in0 = fft_sum(in0, v1);\
	v1 *= 0.5000000f;\
	v2 = fft_diff(in2, in1);\
	v3 = fft_diff(in1, in2);\
	in1 = fft_diff(v0, v1);\
	in2 = in1;\
	v3.x = v3.y;\
	v3.y = v2.x;\
	v3 *= 0.5000000f;\
	v3 *= M_SQRT3;\
	v2 = in1;\
	in1 = fft_sum(v2, v3);\
	in2 = fft_diff(v2, v3);\
}

#define IFFT3(in0, in1, in2) {\
	float2 v0, v1, v2, v3;\
	v0 = in0;\
	v1 = fft_sum(in1, in2);\
	in0 = fft_sum(in0, v1);\
	v1 *= 0.5000000f;\
	v2 = fft_diff(in2, in1);\
	v3 = fft_diff(in1, in2);\
	in1 = fft_diff(v0, v1);\
	in2 = in1;\
	v3.x = v3.y;\
	v3.y = v2.x;\
	v3 *= 0.5000000f;\
	v3 *= M_SQRT3;\
	v2 = in1;\
	in1 = fft_diff(v2, v3);\
	in2 = fft_sum(v2, v3);\
}

#define FFT4(in0, in1, in2, in3) {\
	float2 v0, v1, v2, v3;\
	v0 = fft_sum(in0, in2);\
	v1 = fft_diff(in3, in1);\
	v2 = fft_diff(in1, in3);\
	v3.x = v2.y;\
	v3.y = v1.x;\
	v1 = fft_sum(in1, in3);\
	v2 = fft_diff(in0, in2);\
	in0 = fft_sum(v0, v1);\
	in2 = fft_diff(v0, v1);\
	in1 = fft_sum(v2, v3);\
	in3 = fft_diff(v2, v3);\
}

#define IFFT4(in0, in1, in2, in3) {\
